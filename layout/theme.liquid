<!doctype html>
<html class="no-js" lang="en" xmlns:fb="//ogp.me/ns/fb#">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name=viewport content="width=device-width, initial-scale=1">
  <link rel="canonical" href="{{ canonical_url }}" />

  {% comment %} Page Titles {% endcomment %}
  {%- if template == 'index' -%}
    <title>{{ shop.name }} | {{ page_title }}{% if current_page != 1 %} Page: {{ current_page }}{% endif %}</title>
  {%- else -%}
    <title>{{ page_title }} {% if current_page != 1 %} Page: {{ current_page }}{% endif %} | {{ shop.name }}</title>
  {%- endif -%}

  {{ content_for_header }}
</head>

<body>
  <main role="main">
    {{ content_for_layout }}
  </main>
</body>

</html>
